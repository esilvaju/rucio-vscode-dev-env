{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start-containers",
			"type": "docker-compose",
			"options": {
                "env": {
                    "DOCKER_DEFAULT_PLATFORM": "linux/amd64"
                }
            },
			"dockerCompose": {
				"up": {
					"detached": true,
					"build": true
				},
				"files": [
					"${workspaceFolder}/.vscode/docker-compose.yml"
				]
			},
		},
		{
			"label": "start-rucio",
			"type": "shell",
			"dependsOn": "start-containers",
			"command": "sleep 5 && docker exec -t rucio-dev /opt/rucio/etc/init-dev-container.sh",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				{
				  "pattern": [
					{
					  "regexp": ".",
					  "file": 1,
					  "location": 2,
					  "message": 3
					}
				  ],
				  "background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "Initialization is now Complete! Happy Debugging.*",
				  }
				}
			]
		},
		{
			"label": "stop-rucio",
			"type": "docker-compose",
			"dockerCompose": {
				"down": {
					"removeVolumes": true,
				},
				"files": [
					"${workspaceFolder}/.vscode/docker-compose.yml"
				]
			},
			"problemMatcher": [
				{
				  "pattern": [
					{
					  "regexp": ".",
					  "file": 1,
					  "location": 2,
					  "message": 3
					}
				  ],
				  "background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "^.*Removing network vscode_default",
				  }
				}
			]
		},
		{
			"label": "cleanup",
			"type": "shell",
			"command": "docker exec -t rucio-dev pkill python || exit 0",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [
				{
				  "pattern": [
					{
					  "regexp": ".",
					  "file": 1,
					  "location": 2,
					  "message": 3
					}
				  ],
				  "background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": ".",
				  }
				}
			]
		},
		{
			"label": "rucio-pytest:debug",
			"type": "shell",
			"command": "docker exec -d -t rucio-dev python -m debugpy --listen 0.0.0.0:5681 --wait-for-client -m pytest -vvvrxs ${relativeFile} && sleep 5",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": {
				"owner": "python",
				"fileLocation": ["relative", "${workspaceFolder}/lib/rucio"],
                "pattern": [
                    {
                        "regexp": "^.*File \\\"([^\\\"]|.*)\\\", line (\\d+).*",
                        "file": 1,
                        "line": 2
                    },
                    {
                        "regexp": "^.*raise.*$"
                    },
                    {
                        "regexp": "^\\s*(.*)\\s*$",
                        "message": 1
                    }
                ],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Restarting with watchdog (inotify)",
					"endsPattern": "^.*Debugger is active!",
				}
			}
		},
		{
